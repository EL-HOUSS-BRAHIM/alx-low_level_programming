CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school

SRC = main.c school.c
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean oclean:
	-$(RM) *~ $(NAME)

fclean: clean
	-$(RM) $(OBJ)

re: fclean all
